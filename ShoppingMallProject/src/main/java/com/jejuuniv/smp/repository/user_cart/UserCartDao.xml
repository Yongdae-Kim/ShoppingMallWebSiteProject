<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jejuuniv.smp.repository.user_cart.UserCartDao">
	<select id="findUsersProducstByName" resultType="Product">
		select *
		from
		smp.user_cart uc left outer join smp.products p
		on uc.productId = p.id
		WHERE
		userName=#{userName}
	</select>
	<insert id="insertUsersProduct">
		insert into
		user_cart(userName,
		productId)
		values(#{userName}, #{productId})
	</insert>
	<delete id="deleteUsersProduct">
		delete
		from user_cart
		where productId = #{productId}
	</delete>
	<select id="isExistedUsersProduct" resultType="int">
		select count(*)
		from
		smp.user_cart uc left outer join smp.products p
		on uc.productId =
		p.id WHERE
		productId = #{productId}
	</select>
</mapper>

